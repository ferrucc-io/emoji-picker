{
  "name": "@ferrucc-io/emoji-picker-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "dev": "bun run --cwd demo dev",
    "build": "bun run --cwd packages/emoji-picker build && bun run --cwd demo build",
    "deploy": "bun run build && bun run --cwd demo deploy",
    "test": "bun run --cwd packages/emoji-picker test",
    "test:watch": "bun run --cwd packages/emoji-picker test:watch",
    "test:coverage": "bun run --cwd packages/emoji-picker test:coverage"
  }
}