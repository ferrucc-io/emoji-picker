{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "scripts",
    "src/__tests__",
    "**/__tests__/**",
    "src/test",
    "src/EmojiPicker/__tests__"
  ]
}
